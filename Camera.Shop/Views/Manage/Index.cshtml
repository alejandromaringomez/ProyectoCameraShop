@model Camera.Shop.Models.IndexViewModel

@{
    Layout = "~/Views/Shared/_Layout" + (User.IsInRole("Administrador") ? "Administrador" : "Usuario") + ".cshtml";
    ViewBag.Title = "Configuración de la cuenta";
}

