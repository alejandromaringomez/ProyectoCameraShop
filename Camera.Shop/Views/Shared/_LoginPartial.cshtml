@using Microsoft.AspNet.Identity
@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "w-100" }))
{
    @Html.AntiForgeryToken()
    <span class="p-2 text-white">Hola @User.Identity.GetUserName()!</span>
    @Html.ActionLink("Mi configuración", "Index", "Manage", null, new { @class = "p-2 text-white" })
    <a href="javascript:document.getElementById('logoutForm').submit()" class="p-2 text-white"><i class="fa fa-sign-out"></i> Cerrar sesión</a>
}